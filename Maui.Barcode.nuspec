     <file src="Maui.Barcode.iOS\bin\Release\Maui.Barcode.dll"
         target="lib\Xamarin.iOS10\Maui.Barcode.dll" />
     <file src="Maui.Barcode.iOS\bin\Release\Maui.Barcode.iOS.dll"
         target="lib\Xamarin.iOS10\Maui.Barcode.iOS.dll" />


    <!--Icon-->
    <file src="Mauicode.png" target="images\" />

